
<div class="container">

  <div class="row justify-content-center">
    <div class="col-10">
      <%= render 'shared/errors', obj: @user %>
      <%= form_with(model: @user, class:"shadow p-3 mb-3 bg-info rounded", local: true ) do |f| %>
        <div class="form-group row mb-2">
          <%= f.label :username, class:"col-2 col-form-label text-light" %>
          <div class="col-10">
            <%= f.text_field :username,  class:"form-control shadow-sm bg-body rounded", placeholder: "Please enter a Username" %> 
          </div>
        </div>

        <div class="form-group row mb-2">
          <%= f.label :email, class:"col-2 col-form-label text-light" %>
          <div class="col-10">
            <%= f.email_field :email, class:"form-control shadow-sm bg-body rounded", placeholder: "Please enter a valid email" %>
          </div>
        </div>

        <div class="form-group row">
          <%= f.label :password, class:"col-2 col-form-label text-light" %>
          <div class="col-10">
            <%= f.password_field :password, class:"form-control shadow-sm bg-body rounded", placeholder: "Enter a password" %>
          </div>
        </div>

        <div class="form-group row justify-content-center">
          <div class="col-2">
            <%= f.submit "Sign Up", class:"btn btn-outline-light btn-lg mt-3" %>
          </div>
        </div>

      <% end %>
    </div>

      <%= link_to '[Cancel and return to articles index]', articles_path,class:"text-center", method: :get %>

  </div>
</div>