<div id="page-content">
  <h1 class="text-center mt-4 text-white"><%= @user.username %>'s profile</h1>

  <%= gravatar_for @user, size: 200 %>

  <div class="text-center mt-4">
    <%= link_to 'Edit your profile', edit_user_path(@user.id), class:"btn btn-outline-info", method: :get %>
  </div>

  <h3 class="text-center mt-4 text-white"><%= @user.username %>'s articles</h3>

  <%== pagy_bootstrap_nav(@pagy) %>
  <%= render 'articles/article', obj: @user_articles %>
  
</div>